//- mixin 區塊
//- 產生標題(英文標題，中文標題)
mixin title(eng, chi)
    div(class="title-box")
        h2(class="title")=eng
        h1=chi
        img(src="img/line.png", alt="線條")

//- 產生產品區塊(圖片，產品標題，產品說明)
mixin product-box(img, tit2, text)
    div(class="product-box")
        a(href="#")
            img(src="img/" + img + ".png", alt="產品 照片")
            hr
            h2=tit2
            p=text

mixin contact-box(img, tit2, text1, text2)
    div(class="contact-box")
        img(src="img/" + img + ".png", alt="聯絡我們 照片")
        h2=tit2
        h3=text1
        p=text2


